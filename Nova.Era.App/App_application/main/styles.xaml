 <!-- Common styles -->
<Styles xmlns="clr-namespace:A2v10.Xaml;assembly=A2v10.Xaml"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style x:Key="DataGridSimple">
		<Setter Property="Style" Value="Light"/>
		<Setter Property="Striped" Value="False"/>
		<Setter Property="Hover" Value="True"/>
		<Setter Property="GridLines" Value="Horizontal" />
		<Setter Property="UserSelect" Value="True"/>
	</Style>
	<Style x:Key="DataGridPanel">
		<Setter Property="GridLines" Value="Horizontal" />
		<Setter Property="Striped" Value="True" />
		<Setter Property="CssClass" Value="data-grid-fetch"/>
	</Style>
	<Style x:Key="ToolbarLight">
		<Setter Property="Style" Value="Light"/>
		<Setter Property="Padding" Value="0"/>
	</Style>
	<Style x:Key="TaskpadPage">
		<Setter Property="Collapsible" Value="True"/>
		<Setter Property="Overflow" Value="True"/>
		<Setter Property="Padding" Value="1rem"/>
	</Style>
	<Style x:Key="PagePager">
		<Setter Property="Padding" Value=".5rem,0,0,0"/>
	</Style>
	<Style x:Key="TaskpadPanel">
		<Setter Property="Collapsible" Value="True"/>
		<Setter Property="Padding" Value=".5rem" />
		<Setter Property="Compact" Value="True"/>
	</Style>
</Styles>
